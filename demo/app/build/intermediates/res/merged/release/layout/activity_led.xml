<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtLEDTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="@string/LED"
        android:textColor="@color/title_text"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/Channel_colon"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#6a6a6a" />

        <Spinner
            android:id="@+id/spinnerLEDChannel"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/Device_colon"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#6a6a6a" />

        <Spinner
            android:id="@+id/spinnerLEDDevice"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Initialize"
        android:textColor="#888"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnInitialization"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/common_button"
        android:text="@string/Start"
        android:textColor="@color/white"
        android:textSize="@dimen/common_button_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/Show_Number"
        android:textColor="#888"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txtShowtxt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"


        android:ems="10"
        android:inputType="numberDecimal"
        android:text="8.7654321" />

    <Button
        android:id="@+id/btnShowtxt"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/common_button"
        android:text="@string/Show"
        android:textColor="@color/white"
        android:textSize="@dimen/common_button_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/Show_Special"
        android:textColor="#888"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" >

        <Button
            android:id="@+id/btnPrice"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_border"
            android:text="Price"
            android:textColor="#6a6a6a" />

        <Button
            android:id="@+id/btnTotal"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:background="@drawable/shape_border"
            android:text="Total"
            android:textColor="#6a6a6a" />

        <Button
            android:id="@+id/btnCollect"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:background="@drawable/shape_border"
            android:text="Collect"
            android:textColor="#6a6a6a" />

        <Button
            android:id="@+id/btnChange"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:background="@drawable/shape_border"
            android:text="Change"
            android:textColor="#6a6a6a" />
    </LinearLayout>

</LinearLayout>