<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_pressed="true" >
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
<corners
android:radius="6dp"
/>
<!--solid android:color="#00bfff" /-->
<gradient
android:angle="90"
android:centerX="37%"
android:centerColor="#00bfff"
android:startColor="#05EEFF"
android:endColor="#05EEFF"
android:type="linear"
/>
<padding
android:left="0dp"
android:top="0dp"
android:right="0dp"
android:bottom="0dp"
/>
<stroke
android:width="4dp"
android:color="#8adbeb"
/>
</shape>
</item>

<item>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
<corners
android:radius="6dp"
/>
<gradient
android:angle="90"
android:centerX="37%"
android:centerColor="#A7BED4"
android:startColor="#F2F2F2"
android:endColor="#F2F2F2"
android:type="linear"
/>
<padding
android:left="0dp"
android:top="0dp"
android:right="0dp"
android:bottom="0dp"
/>
<stroke
android:width="1dp"
android:color="#d6d6d6"
/>
</shape>
</item>

</selector>