<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- Message to show to use. -->

    <TextView
        android:id="@+id/main_display_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_weight="0"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/main_display_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!-- Some information about what's going on. -->

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="34dp"
        android:layout_marginRight="18dp"
        android:text="Android\nDual Screen + Dual Touch"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#0000FF"
        android:textStyle="bold" />

    <VideoView
        android:id="@+id/videoView1"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_alignLeft="@+id/button_next"
        android:layout_below="@+id/button_next"
        android:layout_marginTop="51dp" />

    <Button
        android:id="@+id/button_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_weight="0"
        android:text="Toggle Second Screen" />

</RelativeLayout>